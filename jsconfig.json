{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"],
      "@/public/*": ["../public/*"],
      "@/assets/*": ["assets/*"],
      "@/components/*": ["components/*"],
      "@/styles/*": ["styles/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "build"
  ]
}
